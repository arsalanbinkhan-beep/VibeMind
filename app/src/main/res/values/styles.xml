<resources>

    <!-- App Theme -->
    <style name="Theme.VibeMind" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#9B59B6</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2C3E50</item>
        <item name="android:windowBackground">#121212</item>
    </style>

    <!-- Category Chip Style -->
    <style name="CustomCategoryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">50dp</item>
        <item name="chipBackgroundColor">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">#555555</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">40dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- styles.xml -->
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EqualizerPresetButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_background_preset</item>
        <item name="android:textColor">@color/equalizer_preset_button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EqualizerPresetButton.Highlight" parent="EqualizerPresetButton">
        <item name="android:background">@drawable/button_background_custom</item>
        <item name="android:textColor">@color/equalizer_custom_button_text</item>
    </style>
</resources>
